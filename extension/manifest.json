{
    "manifest_version": 3,
    "name": "SiteShield AI",
    "version": "1.0",
    "description": "Real-time ML-based website safety classifier.",
    "permissions": [
        "tabs",
        "notifications"
    ],
    "host_permissions": [
        "http://127.0.0.1:5000/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Check Site Security"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}